$(document).ready(function(a){

    $("#featured").orbit({
         animation: 'fade',
         advanceSpeed: 6500,
         animationSpeed: 500,
         timer: 1});

    a(window).load(function () {
         a("#featured article .post-title h2 span").show()
    });
   
    $.stellar({
          horizontalOffset: 50,
          verticalOffset: 145
    });

    $(window).scroll(function () {
        max = 350;
        $(".post-title").css({'opacity' : 1-($("body").scrollTop()/max)});
    });
});
