%div.modal-header
  %h3
    Messages
%div.modal-body
  - if current_user.received_messages.empty?
    .message
      %h4 You have no messages
  - else
    - current_user.received_messages.limit(3).each do |message|
      .message
        %h4
          - unless message.is_read
            %i.icon-flag
          = message.subject
        %p= truncate(message.body, :length => 150)
        %p
          %i.icon-user
          = link_to "#{message.sender.firstname} #{message.sender.lastname}", profile_user_path(message.sender)
          &mdash;
          %a
            = link_to "Read full &raquo;".html_safe, message_path(message)
%div.modal-footer
  %span.pull-right
    %a.btn{:href => '#', :onClick => '$(this.parentNode.parentNode.parentNode).modal("hide")'}
      Close
    %a#gotoinbox.btn.btn-primary{:href => messages_path}
      Go to Inbox
