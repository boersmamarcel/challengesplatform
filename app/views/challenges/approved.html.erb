<h1>Listing challenges</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Start date</th>
    <th>End date</th>
    <th>State</th>
    <th>Count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @challenges.each do |challenge| %>
  <tr>
    <td><%= challenge.title %></td>
    <td><%= challenge.description %></td>
    <td><%= challenge.start_date %></td>
    <td><%= challenge.end_date %></td>
    <td><%= challenge.state %></td>
    <td><%= challenge.count %></td>
    <td><%= link_to 'Show', challenge %></td>
    <% if Challenge.editable.exists?(challenge) %>
      <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
    <% else %>
      <td></td>
    <% end %>
    <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Revoke', revoke_challenge_path(challenge) %></td>
    
  </tr>
<% end %>
</table>

<br />

