<!-- Mark this page -->
<input type ="hidden" id ='page_identifier' value = 'session.new'\>
<br />
<br />
<br />
<div class="container row-fluid">
  <div class="span4 offset4 text-center login-box">
    <h1>Sign in</h1>
    <br />
    <div>
      <%= link_to "UTwente login", omniauth_authorize_path(resource_name, 'google_oauth2'), :class => "btn btn-primary btn-large" %>
    </div>
    <br />

    <p class="or-divider"><span class="strong">OR</span></p>

    <br />
    <div id = "other-login">
      <p class="btn btn-large" onclick="$('#other_login').removeClass('hidden'); $('#other-login').addClass('hidden')">
        Other
      </p>
    </div>

    <div id="other_login" class="hidden">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <fieldset>
          <div class="clearfix">
            <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>
          </div>
          <div class="clearfix">
            <%= f.password_field :password, :placeholder => "Password" %>
          </div>
          <button class="btn primary" type="submit">Sign in</button>
        </fieldset>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>