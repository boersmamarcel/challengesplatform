<input type="hidden" id="page_identifier" value="index">
%link{ :href =>"http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,700,900,700italic,900italic", :rel=>"stylesheet"}
#featured{"data-advance-speed" => "6500", "data-animation-speed" => "500", "data-autoplay" => "1", "data-bg-color" => "", "data-caption-animation" => "1", "data-slider-height" => "666"}
  .slide.orbit-slide.left
    %article{"data-background-cover" => "1", :style => "background-image: url('assets/screenshot.jpg')"}
      .container
        .col.span_12
          .post-title
            %h2{"data-has-caption" => "1"}
              %span
                Welcome to Science Challenges
            %a.uppercase{:href => "#challenges"} Check the newest challenges
          / /post-title
  .slide.orbit-slides.right
    %article{"data-background-cover" => "1", :style => "background-image: url('assets/university.jpg')"}
      .container
        .col.span_12
          .post-title
            %h2{"data-has-caption" => "1"}
              %span
                Join an awesome challenge 
            %a.uppercase{:href => new_user_session_path } Sign in now
          / /post-title
  .slide.orbit-slides.centered
    %article{"data-background-cover" => "1", :style => "background-image: url('assets/nerds.jpg')"}
      .container
        .col.span_12
          .post-title
            %h2{"data-has-caption" => "1"}
              %span
                Our highly motivated team
            %a.uppercase{:href => team_path } Read more about us!
          / /post-title

